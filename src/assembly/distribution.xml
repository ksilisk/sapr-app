<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <scope>compile</scope>
            <outputDirectory>/lib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>/conf</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
                <exclude>*.bat</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>